<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person information"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:textColor="#1077DD" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"

        android:textSize="20sp" />

    <EditText
        android:id="@+id/edId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@id/tvId"
        app:layout_constraintLeft_toRightOf="@id/tvId"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/tvTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team name: "
       app:layout_constraintLeft_toRightOf="@id/edId"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBaseline_toBaselineOf="@id/tvId"
        android:layout_marginRight="150dp"/>

    <EditText
        android:id="@+id/edTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTeamName"
        app:layout_constraintLeft_toRightOf="@id/tvTeamName"/>

    <ImageView
        android:id="@+id/imPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/noimage"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintStart_toStartOf="@id/edId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tvProjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Title"
        app:layout_constraintTop_toBottomOf="@id/imPhoto"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edProjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
      app:layout_constraintLeft_toRightOf="@id/tvProjectTitle"
        app:layout_constraintBaseline_toBaselineOf="@id/tvProjectTitle"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintBaseline_toBaselineOf="@id/tvProjectTitle"
        app:layout_constraintLeft_toRightOf="@id/edProjectTitle"/>

    <EditText
        android:id="@+id/edDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/tvDesc"
        app:layout_constraintBaseline_toBaselineOf="@id/tvDesc"/>
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total stories"
        app:layout_constraintBaseline_toBaselineOf="@id/edDesc"
       app:layout_constraintLeft_toRightOf="@id/edDesc"
       />

    <EditText
        android:id="@+id/edtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/tvTotal"
       app:layout_constraintBaseline_toBaselineOf="@id/tvDesc"/>

    <TextView
        android:id="@+id/tvMemeber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        app:layout_constraintTop_toBottomOf="@id/tvProjectTitle"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/tvName1"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName1"
         />

    <TextView
        android:id="@+id/tvName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name 1"
        app:layout_constraintTop_toBottomOf="@id/tvMemeber"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/edName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/tvName2"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName1"
        />

    <TextView
        android:id="@+id/tvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name 2"
        app:layout_constraintTop_toBottomOf="@id/tvMemeber"
        app:layout_constraintLeft_toRightOf="@id/edName1"/>
    <EditText
        android:id="@+id/edName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/tvName3"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName1"
        />

    <TextView
        android:id="@+id/tvName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name 3"
        app:layout_constraintTop_toBottomOf="@id/tvMemeber"
        app:layout_constraintLeft_toRightOf="@id/edName2"/>

    <TextView
        android:id="@+id/tvName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name 4"
        app:layout_constraintTop_toBottomOf="@id/tvMemeber"
        app:layout_constraintLeft_toRightOf="@id/edName3"/>
    <EditText
        android:id="@+id/edName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/tvName4"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName1"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnBrowse"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Browse"
        app:layout_constraintTop_toTopOf="@id/btnAdd"
        app:layout_constraintBottom_toBottomOf="@id/btnAdd"
        app:layout_constraintLeft_toRightOf="@id/btnAdd"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Upload"
        app:layout_constraintTop_toTopOf="@id/btnAdd"
        app:layout_constraintBottom_toBottomOf="@id/btnAdd"
        app:layout_constraintLeft_toRightOf="@id/btnBrowse"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnFind"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Find"
        app:layout_constraintTop_toTopOf="@id/btnAdd"
        app:layout_constraintBottom_toBottomOf="@id/btnAdd"
        app:layout_constraintLeft_toRightOf="@id/btnUpload"
        android:textAllCaps="false"    />



</androidx.constraintlayout.widget.ConstraintLayout>