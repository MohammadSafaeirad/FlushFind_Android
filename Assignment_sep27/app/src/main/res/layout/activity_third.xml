<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metrix Conversion"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meter "
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvCentimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centimeter"
        app:layout_constraintStart_toStartOf="@id/tvMeter"
        app:layout_constraintTop_toBottomOf="@id/tvMeter"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tvKilometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilometer"
        app:layout_constraintStart_toStartOf="@id/tvCentimeter"
        app:layout_constraintTop_toBottomOf="@id/tvCentimeter"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="200dp"/>

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="200dp"/>

    <TextView
        android:id="@+id/tvNameAppLable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App developed by: "
        app:layout_constraintStart_toStartOf="@id/btnCalculate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="....."
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvNameAppLable"
        app:layout_constraintLeft_toRightOf="@id/tvNameAppLable"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/edMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvMeter"
        app:layout_constraintLeft_toRightOf="@id/tvMeter"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/edCentimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCentimeter"
        app:layout_constraintLeft_toRightOf="@id/tvCentimeter"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:id="@+id/edKilometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvKilometer"
        app:layout_constraintLeft_toRightOf="@id/tvKilometer"
        android:layout_marginLeft="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>